{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2022",
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": false,
    "outDir": "build",
    "lib": ["es2022"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  },
}
